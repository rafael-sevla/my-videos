<p id="notice"><%= notice %></p>

<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-6">
          <h2>Lista de Videos</h2>
        </div>
        <div class="col-sm-6 text-right">
          <%= link_to 'Novo vídeo', new_video_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Título</th>
          <th>URL</th>
          <th>Categoria</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @videos.each do |video| %>
        <tr>
          <td><%= video.id %></td>
          <td><%= video.title %></td>
          <td><%= video.url %></td>
          <td><%= video.category ? video.category.name : "Sem Categoria" %></td>
          <td>
            <!-- <%= link_to 'Exibir', video, class: 'btn btn-info' %> -->
            <%= link_to 'Editar', edit_video_path(video), class: 'btn btn-warning' %>
            <%= link_to 'Excluir', video, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>