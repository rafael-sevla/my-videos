<p id="notice"><%= notice %></p>
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-12 text-center">
      <h1><%= @video.title %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body" style="height: 40em;">
          <iframe class="w-100 h-100" src="<%= @video.url %>">
          </iframe>
        </div>
      </div>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-sm-12 text-center">
      <h2>Coment√°rios</h2>
    </div>
    <% @video.comment.each do |comment| %>
    <div class="col-sm-12">
      <h4 class="media-heading text-uppercase reviews"><%= comment.author %> </h4>
      <ul class="media-date text-uppercase reviews list-inline">
        <li class="dd">22</li>
        <li class="mm">09</li>
        <li class="aaaa">2014</li>
      </ul>
      <p class="media-comment">
        Great snippet! Thanks for sharing.
      </p>
      <a class="btn btn-info btn-circle text-uppercase" href="#" id="reply"><span
          class="glyphicon glyphicon-share-alt"></span> Reply</a>
      <a class="btn btn-warning btn-circle text-uppercase" data-toggle="collapse" href="#replyOne"><span
          class="glyphicon glyphicon-comment"></span> 2 comments</a>
    </div>
    <% end %>
    <div class="col-sm-12">
      <div class="card">
        <div class="card-body">
          <%= form_for(@comment) do |f| %>
          <% if @comment.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

            <ul>
              <% @comment.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          </div>
          <% end %>
          <%= f.hidden_field :video_id, class: 'form-control', value: @video.id %>
          <div class="field">
            <%= f.label :author %><br>
            <%= f.text_field :author, class: 'form-control' %>
          </div>
          <div class="field">
            <%= f.label :comment %><br>
            <%= f.text_area :comment, class: 'form-control' %>
          </div>
          <div class="actions text-right mt-2">
            <%= link_to 'Voltar', comments_path, class: 'btn btn-secondary p-2' %>
            <%= f.submit value: 'Salvar',class: 'btn btn-primary p-2' %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>