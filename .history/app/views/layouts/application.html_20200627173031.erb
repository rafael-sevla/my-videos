<!DOCTYPE html>
<html>
<head>
  <title>MyVideos</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">My-Videos</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/">Home</a>
        <a class="nav-item nav-link" href="<%= categories_path %>">Categorias</a>
        <a class="nav-item nav-link" href="<%= videos_path %>">Vídeos</a>
        <a class="nav-item nav-link" href="<%= comments_path %>">Comentários</a>
      </div>
    </div>
  </nav>
<%= yield %>

</body>
</html>
