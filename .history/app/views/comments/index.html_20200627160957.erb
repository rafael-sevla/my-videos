<p id="notice"><%= notice %></p>

<div class="container">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-6">
          <h2>Lista de Comentários</h2>
        </div>
        <div class="col-sm-6 text-right">
          <%= link_to 'Novo Comentário', new_comment_path, class: 'btn btn-success' %>
        </div>
      </div>
    </div>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Autor</th>
          <th>Comentário</th>
          <th>Vídeo</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.id %></td>
          <td><%= comment.author %></td>
          <td><%= comment.comment %></td>
          <td><%= comment.video ? "a": "Sem Video" %></td>
          <td>
            <%= link_to 'Exibir', comment, class: 'btn btn-info' %>
            <%= link_to 'Editar', edit_comment_path(comment), class: 'btn btn-warning' %>
            <%= link_to 'Excluir', comment, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>