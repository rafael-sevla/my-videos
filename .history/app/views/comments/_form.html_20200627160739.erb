<div class="card">
  <div class="card-body">
    <%= form_for(@comment) do |f| %>
    <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
        <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <div class="field">
      <%= f.label :video %><br>
      <%= collection_select(:comment,:video_id,Video.all,:id,:title,{:prompt=>true},{:class => 'form-control'}) %>
    </div>
    <div class="field">
      <%= f.label :author %><br>
      <%= f.text_field :author, class: 'form-control' %>
    </div>
    <div class="field">
      <%= f.label :comment %><br>
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
    <div class="actions">
      <%= link_to 'Voltar', comments_path, class: 'btn btn-secondary p-2' %>
      <%= f.submit value: 'Salvar',class: 'btn btn-primary p-2' %>
    </div>
    <% end %>
  </div>
</div>