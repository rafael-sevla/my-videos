<p id="notice"><%= notice %></p>

<div class="container-xl">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-6">
            <h2>Lista de Categorias</h2>
          </div>
          <div class="col-sm-6">
            <%= link_to 'New Category', new_category_path, class: 'btn btn-success' %>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Favorita</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.favorite ? "Sim" : "Não" %></td>
            <td>
              <%= link_to 'Show', category, class: 'btn btn-info' %>
              <%= link_to 'Edit', edit_category_path(category), class: 'btn btn-warning' %>
              <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


