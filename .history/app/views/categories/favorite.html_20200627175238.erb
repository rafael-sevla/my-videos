<div class="container-fluid mt-5">
    <div class="row">
        <div class="col-sm-2 p-0">
            <ul class="list-group">
                <% @categories.each do |category| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= link_to category.name, category, style: 'text-decoration: none;' %>
                    <span class="badge badge-primary badge-pill"><%= category.video.length() %></span>
                </li>
                <% end %>
            </ul>
        </div>
        <div class="col-sm-10">
            <% @favorite_categories.each do |favorite_category| %>
            <div class="col-sm-12 text-center">
                <h1><%= favorite_category.name %></h1>
            </div>
            <div class="row">
                <% favorite_category.video.each do |video| %>
                <div class="col-sm-4">
                    <div class="card p-0">
                        <div class="card-header">
                            <%= video.title %>
                        </div>
                        <div class="card-body" style="height: 20em;">
                            <iframe class="w-100 h-100" src="<%= video.url %>">
                            </iframe>
                        </div>
                    </div>
                </div>
                <% end %>
            </div>
            <% end %>
        </div>
    </div>
</div>