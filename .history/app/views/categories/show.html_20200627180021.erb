<div class="container-fluid mt-5">
  <div class="row">
      <div class="col-sm-12">
          <% @categories.each do |category| %>
          <div class="col-sm-12 text-center">
              <h1><%= favorite_category.name %></h1>
          </div>
          <div class="row">
              <% category.video.each do |video| %>
              <div class="col-sm-4">
                  <div class="card p-0">
                      <div class="card-header">
                          <%= video.title %>
                      </div>
                      <div class="card-body" style="height: 20em;">
                          <iframe class="w-100 h-100" src="<%= video.url %>">
                          </iframe>
                      </div>
                  </div>
              </div>
              <% end %>
          </div>
          <% end %>
      </div>
  </div>
</div>