<p id="notice"><%= notice %></p>

<div class="container-xl">
  <div class="table-responsive">
    <div class="table-wrapper">
      <div class="table-title">
        <div class="row">
          <div class="col-sm-6">
            <h2>Lista de Categorias</h2>
          </div>
          <div class="col-sm-6">
            <a href="<%= new_category_path %>" class="btn btn-success"><i class="fas fa-plus"></i>
              <span>Adicionar Categoria</span></a>
          </div>
        </div>
      </div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Favorita</th>
            <th>Ações</th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.favorite ? "Sim" : "Não" %></td>
            <td>
              <%= link_to 'Show', category %>
              <a href="#editEmployeeModal" class="edit" data-toggle="modal"><i class="material-icons"
                  data-toggle="tooltip" title="" data-original-title="Edit"></i></a>
              <a href="#deleteEmployeeModal" class="delete" data-toggle="modal"><i class="material-icons"
                  data-toggle="tooltip" title="" data-original-title="Delete"></i></a>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Favorite</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
    <tr>
      <td><%= category.name %></td>
      <td><%= category.favorite %></td>
      <td><%= link_to 'Show', category %></td>
      <td><%= link_to 'Edit', edit_category_path(category) %></td>
      <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

